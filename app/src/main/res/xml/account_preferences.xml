<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="profile"
        app:title="Profile">
        <Preference
            app:icon="@drawable/person_icon"
            app:key="username"
            app:title="@string/username"
            app:selectable="false"/>
        <Preference
            app:icon="@drawable/email_icon"
            app:key="email"
            app:title="@string/email"
            app:selectable="false"/>
        <Preference
            app:icon="@drawable/text_icon"
            app:key="firstName"
            app:title="@string/first_name"
            app:selectable="false"/>
        <Preference
            app:icon="@drawable/text_icon"
            app:key="lastName"
            app:title="@string/last_name"
            app:selectable="false"/>
        <Preference
            app:icon="@drawable/calendar_icon"
            app:key="birthdate"
            app:title="@string/birthdate"
            app:selectable="false"/>
        <Preference
            app:icon="@drawable/person_icon"
            app:key="picture"
            app:title="Change profile picture" />
    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="security"
        app:title="Security">
        <Preference
            app:icon="@drawable/email_icon"
            app:key="changeEmail"
            app:title="Change email" />
        <Preference
            app:icon="@drawable/lock_icon"
            app:key="changePassword"
            app:title="Change password" />
    </PreferenceCategory>


    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="other"
        app:title="Other">
        <Preference
            app:icon="@drawable/logout_icon"
            app:key="logout"
            app:title="@string/logout" />

        <Preference
            app:icon="@drawable/delete_icon"
            app:key="deleteAccount"
            app:title="@string/delete_account" />
    </PreferenceCategory>
</PreferenceScreen>